@model Category
@{
    var action = (@Model?.CategoryId == null || @Model.CategoryId == 0) ? "Create" : "Update";
    var buttonText = (@Model?.CategoryId == null || @Model.CategoryId == 0) ? "Create" : "Update";
}
<form asp-action="@action" asp-controller="Category" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="CategoryId" value="@Model?.CategoryId">
        <div class="mb-3 row p-1">
            <label asp-for="CategoryName" class="p-0"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control"
                    style="width:350px !important;">@buttonText</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control"
                    style="width:350px !important;">Back to the List</a>
            </div>
        </div>
    </div>
</form>
